<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginBottom="8dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/product_image_cart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="19sp"
        android:id="@+id/product_name_cart"
        android:textColor="@color/black"
        android:text="ASdDASDASDA"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_cart"
        android:text="@string/u20b9"
        android:fontFamily="serif"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_cart"
        android:layout_marginStart="28dp"
        android:text="11999"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="19sp"
        android:id="@+id/product_price_cart1"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_cart1"
        android:text="details"
        android:fontFamily="serif"
        android:textSize="13sp"
        android:alpha="0.7"
        android:id="@+id/product_details_cart"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:alpha="0.2"
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_below="@id/product_details_cart"
        android:orientation="horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line"
        android:background="@null"
        android:id="@+id/remove_cart"
        android:text="@string/remove"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FFB71C1C"/>


</RelativeLayout>