<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cart_recyclerview"
        android:layout_marginTop="15dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/price_deatils_card"
        android:layout_below="@id/cart_recyclerview"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scanned_product_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/price_details"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Cart Summary"
                android:alpha="0.5"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2"
                android:id="@+id/line1"
                android:layout_marginTop="5dp"
                android:layout_below="@id/price_details"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginTop="5dp"
                android:id="@+id/price_total"
                android:layout_marginStart="5dp"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_cart"
                android:layout_alignParentEnd="true"
                android:text="499"
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_cart"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:text="@string/u20b9"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total"
                android:layout_marginTop="5dp"
                android:id="@+id/price_sgst"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:text="SGST @2.5%"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_cart_sgst"
                android:layout_alignParentEnd="true"
                android:text="17.5"
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_cart_sgst"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst"
                android:layout_marginTop="5dp"
                android:id="@+id/price_cgst"
                android:layout_marginStart="5dp"
                android:text="CGST @2.5%"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_cart_cgst"
                android:layout_alignParentEnd="true"
                android:text="17.5"
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_cart_cgst"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2"
                android:id="@+id/line2"
                android:layout_marginTop="5dp"
                android:layout_below="@id/price_cgst"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginTop="5dp"
                android:id="@+id/price_total_payable"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/amount_payable"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_cart_payable"
                android:layout_alignParentEnd="true"
                android:text="534"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_toStartOf="@id/product_price_cart_payable"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/scan_product_progressbar"/>
</RelativeLayout>