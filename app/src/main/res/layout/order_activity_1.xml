<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/order_qrcode"
        android:layout_marginStart="160dp"
        android:layout_below="@id/toolbar_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_qrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:id="@+id/order_id"
        android:alpha="0.6"
        android:textColor="@color/black"
        android:text="Bill id - sadasdsadaad" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_id"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:id="@+id/order_date"
        android:alpha="0.6"
        android:textColor="@color/black"
        android:text="17/08/2018" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemlist_layout"
        android:layout_marginTop="15dp"
        android:layout_below="@id/order_date"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items List"
            android:padding="10dp"
            android:id="@+id/itemslist"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.2"
            android:id="@+id/line3"
            android:layout_below="@id/itemslist"
            tools:ignore="Orientation" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:id="@+id/orderitems_recyclerview"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.2"
            android:id="@+id/line4"
            android:layout_below="@id/orderitems_recyclerview"
            tools:ignore="Orientation"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:alpha="0.8"
            android:textColor="@color/black"
            android:id="@+id/total_items_order"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/line4"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/itemlist_layout"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/price_details_order"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Bill Details"
                android:alpha="0.5"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2"
                android:id="@+id/line1_order"
                android:layout_marginTop="5dp"
                android:layout_below="@id/price_details_order"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1_order"
                android:layout_marginTop="5dp"
                android:id="@+id/price_total_order"
                android:layout_marginStart="5dp"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1_order"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_order"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1_order"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_order"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:text="@string/u20b9"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total_order"
                android:layout_marginTop="5dp"
                android:id="@+id/price_sgst_order"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:text="SGST @2.5%"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total_order"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_order_sgst"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_total_order"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_order_sgst"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst_order"
                android:layout_marginTop="5dp"
                android:id="@+id/price_cgst_order"
                android:layout_marginStart="5dp"
                android:text="CGST @2.5%"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst_order"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_order_cgst"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_sgst_order"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/product_price_order_cgst"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.2"
                android:id="@+id/line2_order"
                android:layout_marginTop="5dp"
                android:layout_below="@id/price_cgst_order"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2_order"
                android:layout_marginTop="5dp"
                android:id="@+id/price_total_payable_order"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/bill_amount"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2_order"
                android:layout_marginTop="5dp"
                android:id="@+id/product_price_order_payable"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2_order"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toStartOf="@id/product_price_order_payable"
                android:layout_marginStart="5dp"
                android:text="@string/u20b9"
                android:textSize="20sp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/order_progressbar"/>
</RelativeLayout>